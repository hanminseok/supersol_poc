{
  "customer_info": {
    "get_customer_info": {
      "description": "고객의 개인정보를 조회합니다.",
      "parameters": {
        "customer_id": {
          "type": "string",
          "description": "고객 ID",
          "required": true
        }
      },
      "returns": {
        "name": "고객명",
        "phone": "전화번호",
        "email": "이메일",
        "address": "주소"
      }
    },
    "update_customer_info": {
      "description": "고객의 개인정보를 수정합니다.",
      "parameters": {
        "customer_id": {
          "type": "string",
          "description": "고객 ID",
          "required": true
        },
        "field": {
          "type": "string",
          "description": "수정할 필드 (name, phone, email, address)",
          "required": true
        },
        "value": {
          "type": "string",
          "description": "새로운 값",
          "required": true
        }
      },
      "returns": {
        "status": "수정 상태",
        "message": "수정 결과 메시지"
      }
    }
  },
  "financial_info": {
