  "transfer": {
    "get_transfer_history": {
      "description": "이체 내역을 조회합니다.",
      "parameters": {
        "account_number": {
          "type": "string",
          "description": "계좌번호",
          "required": true
        },
        "start_date": {
          "type": "string",
          "description": "조회 시작일 (YYYY-MM-DD)",
          "required": false
